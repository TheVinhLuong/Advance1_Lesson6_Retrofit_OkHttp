<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.example.android.recyclerviewexample.screen.wordList.WordListViewModel"
            />

        <variable
            name="word"
            type="com.example.android.recyclerviewexample.data.word.Word"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.wordList.WordListFragment"
        >

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:recyclerAdapter="@{viewModel.adapter}"
            />
        <Button
            android:text="makeRequest"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="@{(v) -> viewModel.getPresenter().onMakeRequestButtonClicked()}"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/button"
            tools:layout_editor_absoluteX="36dp"
            />

        <TextView
            android:text="@{word.word}"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.473"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
